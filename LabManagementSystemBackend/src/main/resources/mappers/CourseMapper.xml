<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.labmanagementsystembackend.mapper.CourseMapper">

    <resultMap id="CourseMap" type="com.example.labmanagementsystembackend.domain.entity.Course">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="class_name" property="className" />
        <result column="student_count" property="studentCount" />
        <result column="term" property="term" />
        <result column="created_by" property="createdBy" />
        <result column="is_deleted" property="isDeleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <select id="findById" resultMap="CourseMap">
        SELECT * FROM courses WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="findCourses" resultMap="CourseMap">
        SELECT * FROM courses
        <where>
            AND is_deleted = 0
            <if test="createdBy != null">AND created_by = #{createdBy}</if>
            <if test="term != null and term != ''">AND term = #{term}</if>
        </where>
        ORDER BY id DESC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <select id="countCourses" resultType="long">
        SELECT COUNT(1) FROM courses
        <where>
            AND is_deleted = 0
            <if test="createdBy != null">AND created_by = #{createdBy}</if>
            <if test="term != null and term != ''">AND term = #{term}</if>
        </where>
    </select>

    <insert id="insertCourse" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO courses (name, class_name, student_count, term, created_by, is_deleted)
        VALUES (#{name}, #{className}, #{studentCount}, #{term}, #{createdBy}, #{isDeleted})
    </insert>
</mapper>
